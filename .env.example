# ========================================
# SUPABASE CONFIGURATION (REQUIRED for SaaS)
# ========================================
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key

# JWT Secret for authenticating Supabase tokens
# Find this in: Supabase Dashboard > Settings > API > JWT Secret
SUPABASE_JWT_SECRET=your-jwt-secret-here

# ========================================
# API KEYS (Can be set per-user in UI)
# ========================================
# These are default/fallback keys. Users can override with their own in settings.

# SerpAPI - For trending topics
SERP_API_KEY=your_serp_api_key

# OpenAI - For script generation
OPENAI_API_KEY=your_openai_api_key

# ElevenLabs - For voiceover generation
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Perplexity - Alternative research API
PERPLEXITY_API_KEY=your_perplexity_api_key

# Image APIs (at least one required)
PEXELS_API_KEY=your_pexels_api_key
UNSPLASH_ACCESS_KEY=your_unsplash_access_key
PIXABAY_API_KEY=your_pixabay_api_key

# ========================================
# YOUTUBE OAUTH (Optional - for uploads)
# ========================================
YOUTUBE_CLIENT_ID=your_client_id
YOUTUBE_CLIENT_SECRET=your_client_secret
YOUTUBE_REDIRECT_URI=urn:ietf:wg:oauth:2.0:oob
